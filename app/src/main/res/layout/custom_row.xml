<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bmw" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-55dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-light"
            android:text="20000 BYN"
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ford"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Belarus, Minsk"
                android:layout_marginBottom="8dp"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="This is the best avto for Belarus. This has the main 3200 km. Only one and two single account 2.32." />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moreAbout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#004D0E0E"
                    android:gravity="center"
                    android:text="Подробнее"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="16dp"
                    app:backgroundTint="#D2D6E2" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>